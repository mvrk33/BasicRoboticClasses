import machine
import utime
values=[]                   ### creating a list to obtain the number of values to find "ADC value" 
analog_value = machine.ADC(28)
s=0

while True:
    reading = analog_value.read_u16()
    s=s+1
    print("ADC value --> ",reading)
    values.append(reading)
    utime.sleep(0.1)
    if s==50:
        break
adc_value = (sum(values)/s)
print('the ADC value =',adc_value)    ### " ADC value " obtained by using (Average // Arthematic Mean ) operation..
formule = (3.3*adc_value/2**12)
print('Voltage at the Point ==>',formule,'V')






